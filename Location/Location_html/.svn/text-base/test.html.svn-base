<html>
<head>
<meta http-equiv="content-type" content="text/html;charset=utf-8" />
<title>jquery当前日期</title>
<script type="text/javascript" src="../Location_js/jquery-1.8.0.min.js" ></script>
<script type="text/javascript">
 $(function(){
  function show(){
   var mydate = new Date();
   var str = "" +(mydate.getMonth()+1) + "/";
   str += mydate.getDate() + "/";
   str += mydate.getHours() + ":";
   str += mydate.getMinutes() + "";   
   return str;
  }
  $("input[type='button']").click(function(){
   $("p").html(show());
   $("p").animate({
   	fontSize:"10px",
   	color:"darkgray"
   });
  });
 });
</script>
</head>
<body>
<input type="button" value="看看现在的时间" />
<p></p>
</body>
</html>